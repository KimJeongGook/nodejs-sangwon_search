<script>
$(document).ready(function () {
            var currentDate = new Date();

            var currentYear = currentDate.getFullYear();
            var currentMonth = currentDate.getMonth();

            var year = "<%=year%>";
            var month = "<%=month%>";
            currentYear = year*1;
            currentMonth = month*1;

            var search_month_html = "<option value=''>- 월 선택 -</option>";
            for (var idx = 1; idx < 13; idx++) {

                search_month_html += "<option value=" + lpad(idx, 2, '0');
                if (idx == currentMonth) {
                    search_month_html += " selected";
                }
                search_month_html += ">" + idx + " 월</option>";

                if (idx == 12) {
                    $("#search_month").html(search_month_html);
                }
            }



            var search_year_html = "<option value=''> - 년도 선택 - </option>";
            for (var idx = 0; idx < 10; idx++) {
                search_year_html += "<option value='" + (currentYear - idx) + "'";
                if (idx == 0) {
                    search_year_html += " selected";
                }
                search_year_html += ">" + (currentYear - idx) + "</option>";

                if (idx == 9) {
                    $("#search_year").html(search_year_html);
                }
            }
    });
    function dues_getMemberList() {

        var PARAM = new Object();
        
        var searchText = $("#searchTxt").val();


        
        PARAM.year = $("#pay_year").val();
        PARAM.month = $("#pay_month").val();
        PARAM.searchText = searchText;
        if (searchText == null || searchText == "") {
            alert("검색어를 입력해주세요");
        } else {
            $("#memberList").empty();
            $.ajax({
                url: "/admin/web/dues_getMemberList"
                , data: PARAM
                , type: "POST"
                , success: function (result) {
                    console.log(result);
                    var html = "";
                    for (var i = 0; i < result.length; i++) {
                        var item = result[i];
                        html += "<div class='member'><input type='radio' name='memberCheckBox' data-orgmem_no='" + item.orgmem_no + "' onclick='dues_getMemberInfo(this);'><span>" + item.orgmem_name + "</span><span>" + item.orgmem_seqNo + "기</span></div>"
                    }

                    $("#memberList").html(html);
                }
            });
        }
    }


    function dues_getMemberInfo(param) {
        console.log(param);
        var PARAM = new Object();

        PARAM.orgmem_no = param.dataset.orgmem_no;
        $.ajax({
            url: "/admin/web/dues_getMemberInfo"
            , data: PARAM
            , type: "POST"
            , success: function (result) {
                console.log(result);
                $("#orgmem_no").val(result[0].orgmem_no);
                $("#orgmem_no_txt").text(result[0].orgmem_no);
                $("#orgmem_name").text(result[0].orgmem_name);
                $("#orgmem_seqNo").text(result[0].orgmem_seqNo);
            }
        });
    }

    function dues_insert(){
        var PARAM = new Object();

        PARAM.year = $("#search_year option:selected").val();
        PARAM.month = $("#search_month option:selected").val();
        PARAM.price = $("#pay_price").val();
        PARAM.pay_option = $("#pay_option").val();
        PARAM.orgmem_no = $("#orgmem_no").val();
        PARAM.mode = 'insert';
        console.log($("#orgmem_no").val());
        if($("#orgmem_no").val()== null || $("#orgmem_no").val() == ""){
            alert("회원을 선택해주세요");
        }else{
            $.ajax({
            url: "/admin/web/dues_save"
            , data: PARAM
            , type: "POST"
            , success: function (result) {
                dues_getMemberList();
                $("#orgmem_no").val("");
                $("#orgmem_name").text("");
                $("#orgmem_seqNo").text("");
                $("#orgmem_no_txt").text("");
                alert("등록완료");
            }
        });
        }

    }

    function lpad(str, padLen, padStr) {
		if (padStr.length > padLen) {
			console.log("오류 : 채우고자 하는 문자열이 요청 길이보다 큽니다");
			return str;
		}
		str += ""; // 문자로
		padStr += ""; // 문자로
		while (str.length < padLen)
			str = padStr + str;
		str = str.length >= padLen ? str.substring(0, padLen) : str;
		return str;
	}

</script>

