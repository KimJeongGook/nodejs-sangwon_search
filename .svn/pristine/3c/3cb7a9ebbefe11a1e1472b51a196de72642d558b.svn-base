<script type="text/javascript">
	$(document).ready(function() {
		$("#board_btn").click(function(){
			location.href="hongbo_board_write";
		});
		
		/*page_navi*/
		var page_navi = tag_place("<%=page_navi%>");
		$('#page_navi').html(page_navi);
		/*page_navi*/
		
		$('#brd_search').click(function(){
			var search_type = $("select[name='search_type']").val();
			$("#search_type").attr("value", search_type);
			var frm = document.boardForm;
			frm.action = '/admin/web/hongbo_board_list';
			frm.submit();
		});
		
		$("#search_text").keydown(function(e){
			if(e.keyCode == 13) $('#brd_search').click();
		});
		
		$(".brd_del").click(function() {
			var board_no = $("#board_no").val($(this).attr('brd_no'));
			if (confirm("삭제하시겠습니까?")) {
				var form = document.boardForm;
				form.action = '/admin/web/hongbo_board_del';	
				form.submit();	
			}
		});
		
		$( "#search_type" ).selectmenu({width: 100});
	});
	
	function brd_del() {
		var board_no = $("#board_no").val($(this).attr('brd_no'));
	}
	
	function goPage(p_num){
		var frm = document.boardForm;
		frm.action = 'hongbo_board_list';
		frm.nowPage.value = p_num;
		frm.submit();
	}
</script>

	<form id="boardForm" name="boardForm" method="post" action="" onsubmit="return false;" autocomplete="off">
		<input type="hidden" name="nowPage" value="<%=nowPage%>"/>
		<input type="hidden" id="number" name="number" value="" />
		<input type="hidden" id="filename" name="filename" value="" />
		<input type="hidden" id="board_no" name="board_no" value="" />
		<div class="board_search">
			<h3 class="float_l">동문홍보관리</h3>
			<p class="float_r">
				<select name="search_type" id="search_type">
					<option value="board_title" <%if(search_type=="board_title"){%> selected="selected" <%}%>>제목</option>
					<option value="board_content" <%if(search_type=="board_content"){%> selected="selected" <%}%>>내용</option>
				</select>
				<input type="text" name="search_text" id="search_text" value="<%=search_text%>" style="ime-mode:active; height: 24px;"/>
				<!-- <input type="button" id="brd_search" value="검색"  class="btn_big_blue"/> -->
				<button class="ui-button" id="brd_search" type="button">
					<span class="ui-icon ui-icon-search"></span>검색
				</button>
			</p>
		</div>
		<div class="gallery">
			<ul>
				<% for(var i = 0; i < data.length; i++){ %>
				<li>
					<p>
					<%	if(data[i].img_file_name == ''){%>
						<img src="/images/admin/noimg.gif" alt="" class="hand" onclick="MM_openBrWindow('/admin/web/hongbo_board_view','','width=550,height=550','<%=data[i].board_no %>','view')" />
					<%	}else{%>
						<img src="/file/hongbo_board/<%=data[i].img_file_name%>" alt="" class="hand" onclick="MM_openBrWindow('/admin/web/hongbo_board_view','','width=550,height=650,scrollbars=1','<%=data[i].board_no %>','view')" />
					<%	}%>
					</p>
					<dl>
						<dt class="hand" onclick="MM_openBrWindow('/admin/web/hongbo_board_view','','width=550,height=550,scrollbars=1','<%=data[i].board_no %>','view')"><%=data[i].board_title %></dt>
						<dd>
						<% if(data[i].org_leader_day == ''){%>
							&nbsp;
						<% }else{%>
							<% if(data[i].org_leader == '교수진'){%>
								<%=data[i].org_leader_day %>년/<%=data[i].org_leader %> <%=data[i].orgmem_name %>
							<% }else{%>
								<%=data[i].org_leader_day %>년/<%=data[i].org_leader %>기 <%=data[i].orgmem_name %>
							<% }%>
						<% }%>				
						</dd>
						<dd>
							<a href="#" onclick="MM_openBrWindow('/admin/web/hongbo_board_write','','width=550,height=750,scrollbars=1', '<%=data[i].board_no %>', 'modify')"><img src="../../../images/admin/icon_edit.gif" alt="수정" /></a>
							<img class="brd_del hand" brd_no="<%=data[i].board_no %>" src="../../../images/admin/icon_delete.gif" alt="삭제" />
							<% if(data[i].comment_cnt != 0){%>
							<img class="hand" onclick="MM_openBrWindow('/admin/web/hongbo_comment_view','','width=550,height=550,scrollbars=1','<%=data[i].board_no %>','comment')" src="../../../images/admin/icon_comment.gif" alt="댓글" />
							<% }%>		
						</dd>
					</dl>
				</li>
				<% } %>
				<%if(data.length == 0){%>
				<p style="padding-top:50px;text-align:center;">
					등록된 게시물이 없습니다.
				</p>
				<%}%>
			</ul>
		</div>
	</form>
	<div class="mt_20">
		<div class="paging" id="page_navi">
		</div>
		<p class="float_r">
			<button class="ui-button" type="button" onclick="MM_openBrWindow('/admin/web/hongbo_board_write','','width=550,height=770','','write')">
				<span class="ui-icon ui-icon-document"></span>등록
			</button>
		</p>
	</div>
