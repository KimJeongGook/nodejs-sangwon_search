        beforeCellWrite:function(row, cellData){
                         if(cellData==null)
             return '';
            else
             return cellData.toUpperCase();
        }
        , width:15         
    }];

    
    sql = "SELECT * FROM doc_1 ORDER BY idx \n";
	
	db.query(sql, function(error, results){
		 if(error){
			 //response.send(error);
		 }else{
			console.log("sql ::::::: " + sql);
			
			var arr = [];
			
			for(i=0; i<results.length; i++){
				var idx = results[i].idx;
                var orgmem_position = results[i].orgmem_position;                
                var orgmem_name = results[i].orgmem_name;
                var company_name = results[i].company_name;
                var address = results[i].address;
                var company_phone = results[i].company_phone;
                var company_fax = results[i].company_fax;
                
				a=[idx, orgmem_position, orgmem_name, company_name, address, company_phone, company_fax];
				
				arr.push(a);
			}
			
			conf.rows = arr;
			
			var result = nodeExcel.execute(conf);

		    response.setHeader('Content-Type', 'application/vnd.openxmlformats');

		    response.setHeader("Content-Disposition", "attachment; filename=" + "sheet1.xlsx");

		    response.end(result, 'binary');
		 }		 
		 
	});
}